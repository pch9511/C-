@model UserViewModel
@{
    ViewData["Title"] = "회원요청";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="User" asp-action="Register" method="post"
                  class="form-horizontal">
                <h4>현재 계정의 정보를 입력하시오.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Id"></label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" asp-for="Id"
                               placeholder="아이디">
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Password"></label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" asp-for="Password"
                               placeholder="암호">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="RegiNum"></label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" asp-for="RegiNum"
                               placeholder="사업자등록번호">
                        <span asp-validation-for="RegiNum" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-6">
                        <input type="submit" value="요청" class="btn btn-primary btn-lg" />
                        <a asp-controller="User" asp-action="Register"
                           class="btn btn-default btn-sm">취소</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4">
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
