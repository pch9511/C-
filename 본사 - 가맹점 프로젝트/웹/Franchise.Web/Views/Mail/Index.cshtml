@model IEnumerable<Mail>
<div class="row">
    <div class="col-md-6">
        <h2>메일함</h2>
        <table style="width: 800px; margin-right:auto;">
            <tr>
                <td>
                    <table class="table table-bordered table-hover table-condensed table-striped table-responsive">
                        <tr style="background-color:rgb(222,222,222)">
                            <th style=width:100px; text-align:center;>
                                작성자
                            </th>
                            <th style=width:360px; text-align:center;>
                                제목
                            </th>
                            <th style=width:100px; text-align:center;>
                                작성일
                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                    
                                </td>
                                <td>
                                    <a asp-area="" asp-controller="Mail" asp-action="MailDetail" asp-route-id="@item.Num">@item.Title</a>
                                </td>
                                <td>
                                    @item.Date
                                </td>

                            </tr>
                        }
                    </table>
                </td>
            </tr>
        </table>
    </div>
</div>
